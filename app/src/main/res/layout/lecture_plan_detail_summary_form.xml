<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.dbsh.skup.viewmodels.LecturePlanDetailSummaryViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lectureplan_detail_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/lectureplan_detail_summary_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교과목정보"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lectureplan_detail_summary_lecture_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="담당교수정보"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_lecture_layout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lectureplan_detail_summary_professor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/attendance_detail_list_background"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/lectureplan_detail_summary_professor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교수"
                    android:textSize="12dp"
                    android:textColor="@color/mainBlue"
                    android:textStyle="normal"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/lectureplan_detail_summary_professor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="염동빈"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toBottomOf="@+id/lectureplan_detail_summary_professor_text"
                    app:layout_constraintLeft_toLeftOf="@id/lectureplan_detail_summary_professor_text"/>

                <ImageView
                    android:id="@+id/lectureplan_detail_summary_professor_phone_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/imageview_professor_phone"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_professor_name"
                    app:layout_constraintLeft_toLeftOf="@id/lectureplan_detail_summary_professor_name"/>

                <TextView
                    android:id="@+id/lectureplan_detail_summary_professor_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010-1234-5678"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="@id/lectureplan_detail_summary_professor_phone_img"
                    app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_professor_phone_img"/>

                <ImageView
                    android:id="@+id/lectureplan_detail_summary_professor_email_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/imageview_professor_email"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_professor_phone_img"
                    app:layout_constraintLeft_toLeftOf="@id/lectureplan_detail_summary_professor_name"/>

                <TextView
                    android:id="@+id/lectureplan_detail_summary_professor_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="trpark_lover@skuniv.ac.kr"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="@id/lectureplan_detail_summary_professor_email_img"
                    app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_professor_email_img"/>

                <ImageView
                    android:id="@+id/lectureplan_detail_summary_professor_logo"
                    android:layout_width="92dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/imageview_sku_blue_logo"
                    app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_professor_email_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교과목 개요"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_professor_layout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교과목 개요 설명란"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/gray1"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title3"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의목표"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_summary"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의목표 설명란"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/gray1"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title4"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의방법"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_goal"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_lecture"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="강의"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title5"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_debate"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="토론/토의"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title5"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_lecture"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_practical"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="실험/실습/실기"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title5"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_debate"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_team"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="소그룹(팀)/협동학습"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_lecture"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_problem"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="문제중심"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_lecture"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_team"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_project"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="프로젝트"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_lecture"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_problem"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_flip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="플립러닝"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_team"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_invitation"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="초청강의"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_team"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_flip"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_individual"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="개별학습(1:1)"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_team"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_invitation"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_experience"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="현장답사/체험"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_flip"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_online"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="온라인"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_flip"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_experience"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_is_action"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/textview_subsky_background"
                android:text="액션러닝"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/mainBlue"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_flip"
                app:layout_constraintLeft_toRightOf="@id/lectureplan_detail_summary_is_online"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가방법"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_is_experience"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공능력"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title6"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_ability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공능력 설명란"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/gray1"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title7"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의규정 또는 안내사항"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_ability"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의규정 또는 안내사항 설명란"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/gray1"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_title8"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/lectureplan_detail_summary_title9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교재 및 참고도서 / 추천도서"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_notice"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>