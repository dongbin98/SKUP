<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.dbsh.skup.viewmodels.AttendanceViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/attendance_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="출결"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="20dp" />
        </androidx.appcompat.widget.Toolbar>

        <Spinner
            android:id="@+id/attendance_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/spinner_attendance_background"
            app:layout_constraintTop_toBottomOf="@id/attendance_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Spinner
            android:id="@+id/attendance_spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/spinner_attendance_background"
            app:layout_constraintTop_toBottomOf="@id/attendance_toolbar"
            app:layout_constraintLeft_toRightOf="@id/attendance_spinner"/>

        <ImageButton
            android:id="@+id/attendance_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_mainblue_background"
            app:layout_constraintTop_toTopOf="@id/attendance_spinner2"
            app:layout_constraintBottom_toBottomOf="@id/attendance_spinner2"
            app:layout_constraintLeft_toRightOf="@id/attendance_spinner2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_search"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="@id/attendance_btn"
            app:layout_constraintLeft_toLeftOf="@id/attendance_btn"
            app:layout_constraintRight_toRightOf="@+id/attendance_btn"
            app:layout_constraintBottom_toBottomOf="@id/attendance_btn"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendance_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/attendance_spinner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/attendance_blank_view"/>

        <View
            android:id="@+id/attendance_blank_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>