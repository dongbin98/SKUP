<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_margin="8dp"
    android:background="@drawable/attendance_detail_list_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/scholarship_type_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageview_attendance_blue_dot_circle"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/scholarship_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainBlue"
        android:text="근로"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintTop_toTopOf="@+id/scholarship_type_circle"
        app:layout_constraintLeft_toLeftOf="@+id/scholarship_type_circle"
        app:layout_constraintRight_toRightOf="@id/scholarship_type_circle"
        app:layout_constraintBottom_toBottomOf="@id/scholarship_type_circle"/>

    <TextView
        android:id="@+id/scholarship_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainBlue"
        android:text="근로장학금(학기)"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/scholarship_type_circle"/>

    <TextView
        android:id="@+id/scholarship_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray2"
        android:text="ㆍ3월분-960840"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/scholarship_name"/>

    <TextView
        android:id="@+id/scholarship_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="￦906,840"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/scholarship_detail"
        app:layout_constraintLeft_toRightOf="@id/scholarship_type_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>