<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_margin="8dp"
    android:background="@drawable/attendance_list_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/attendance_type_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageview_attendance_blue_dot_circle"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/attendance_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainBlue"
        android:text="출석"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintTop_toTopOf="@+id/attendance_type_circle"
        app:layout_constraintLeft_toLeftOf="@+id/attendance_type_circle"
        app:layout_constraintRight_toRightOf="@id/attendance_type_circle"
        app:layout_constraintBottom_toBottomOf="@id/attendance_type_circle"/>

    <TextView
        android:id="@+id/attendance_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainBlue"
        android:text="출석"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/attendance_type_circle"/>

    <TextView
        android:id="@+id/attendance_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray2"
        android:text="ㆍ2022-09-13"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/attendance_state"/>

    <TextView
        android:id="@+id/attendance_string"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="출석했습니다."
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/attendance_date"
        app:layout_constraintLeft_toRightOf="@id/attendance_type_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>