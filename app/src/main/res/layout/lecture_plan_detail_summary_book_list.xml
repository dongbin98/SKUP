<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lectureplan_detail_summary_book"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:background="@drawable/lectureplan_book_background">

    <TextView
        android:id="@+id/lectureplan_detail_summary_book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Business Plus: Preparing for the workplace Book3"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/lectuerplan_detail_summary_book_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="손승원 외 3인ㆍ2007"
        android:textColor="@color/gray1"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_book_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/lectuerplan_detail_summary_book_publisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cambridge University Press Singapore"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lectureplan_detail_summary_book_plus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/lectureplan_book_hide_background">

        <ImageView
            android:id="@+id/lectureplan_detail_summary_book_plus_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lectureplan_book_plus_button"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/lectureplan_detail_summary_book_plus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="더보기"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/gray2"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lectureplan_detail_summary_book_plus_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>