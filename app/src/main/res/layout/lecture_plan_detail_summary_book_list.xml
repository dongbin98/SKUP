<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:background="@drawable/lectureplan_book_background">

    <TextView
        android:id="@+id/lectureplan_detail_summary_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Plus: Preparing for the workplace Book3"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lectuerplan_detail_summary_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="손승원 외 3인"
        android:textColor="@color/gray1"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_book_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lectuerplan_detail_summary_book_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㆍ2007"
        android:textColor="@color/gray1"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/lectureplan_detail_summary_book_title"
        app:layout_constraintLeft_toRightOf="@id/lectuerplan_detail_summary_book_author"/>

    <TextView
        android:id="@+id/lectuerplan_detail_summary_book_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambridge University Press Singapore"
        android:textColor="@color/gray1"
        android:textSize="12dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/lectuerplan_detail_summary_book_author"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>